#!/usr/bin/env bash

# Activate Python virtual environment
source_venv venv

# Set environment variables for the fake CareCloud API
export FAKE_CARECLOUD_HOST="0.0.0.0"
export FAKE_CARECLOUD_PORT="7000"
export FAKE_CARECLOUD_DEBUG="true"

# Database configuration
export DATABASE_URL="sqlite:///./carecloud.db"

# API configuration
export API_TITLE="Fake CareCloud API"
export API_VERSION="1.0.0"

echo "üè• Fake CareCloud API environment loaded"
echo "   Virtual environment: $(which python)"
echo "   Server will run on: http://${FAKE_CARECLOUD_HOST}:${FAKE_CARECLOUD_PORT}"
echo "   API docs available at: http://${FAKE_CARECLOUD_HOST}:${FAKE_CARECLOUD_PORT}/docs"